 <div class="form1">
    <div class="row">
    <div class="container">
    <div class="col-md-6 col-sm-6 col-xs-6">
    <div class="form_group">
       <%= form_for(@user) do |f| %>
       <span class="glyphicon glyphicon-user"></span>
      <%= f.text_field :name, :placeholder => "name" , class:'form_control' %>
       <span class="glyphicon glyphicon-envelope"></span>
      <%= f.email_field :email, :placeholder => "Email" , class:'form_control' %>
       <span class="glyphicon glyphicon-lock"></span>
      <%= f.password_field :password, :placeholder => "Password" , class:'form_control' %>
       <span class="glyphicon glyphicon-question-sign"></span>
      <%= f.select :role, options_for_select([['student', 'student'], ['staff', 'staff'], ['admin', 'admin']] , selected: :role , class:'form_control' ) %>
      <%= f.submit "Create an account", class: "btn-submit" %>
    <% end %>
</div>
</div>
</div>
</div>
</div>
</div>